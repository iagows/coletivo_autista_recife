{
    "name": "car",
    "version": "0.12.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/bun": "latest"
    },
    "module": "index.ts",
    "type": "module",
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "scripts": {
        "backend": "cd packages/backend && bun run dev",
        "frontend": "cd packages/frontend && bun run dev",
        "build": "bun run --parallel build:frontend build:backend",
        "build:backend": "cd packages/backend && bun run build",
        "build:frontend": "cd packages/frontend && bun run build"
    }
}